generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id          String        @id @default(uuid())
  name        String        @unique
  icon        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime?     @updatedAt
  transactions Transaction[]

  @@map("categories")
}

model Bank {
  id          String        @id @default(uuid())
  name        String
  code        String?
  ispb        String?
  fullName    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime?     @updatedAt
  transactions Transaction[]

  @@map("banks")
}

model Transaction {
  id          String    @id @default(uuid())
  description String?
  amount      Float
  type        String
  date        DateTime
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  bankId      String?
  bank        Bank?     @relation(fields: [bankId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt

  @@map("transactions")